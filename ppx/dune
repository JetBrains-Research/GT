(rule
  (targets pp_gt.exe)
  (deps    pp_gt.ml ../plugins/show.cmxa)
  (action  (run
    ocamlfind ocamlopt -package base,ppxlib,ocamlgraph
      ../common/GTCommon.cmxa
      ppx.cmxa
      ../plugins/show.cmxa
      ../plugins/gmap.cmxa
      ../plugins/foldl.cmxa
      ../plugins/foldr.cmxa
      pp_gt.ml -linkall -linkpkg
      -o %{targets} ))
)
