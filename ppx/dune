(library
  (name ppx)
  (public_name GT.ppx)
  (kind ppx_rewriter)
  (libraries base ppxlib GTCommon)
  (modules Ppx_deriving_gt PpxHelpers)
  (preprocess (pps ppxlib.metaquot))
  (flags (:standard -w -27-9 -warn-error -A))
)

